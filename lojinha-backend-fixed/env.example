# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA - LOJINHA PWA
# ===========================================

# ⚠️ IMPORTANTE: NUNCA commitar este arquivo com valores reais!
# Copie para .env e configure com valores seguros

# ===========================================
# BANCO DE DADOS
# ===========================================
DB_DIALECT=sqlite
DB_STORAGE=./config/database.sqlite

# Para produção, use PostgreSQL:
# DB_DIALECT=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=lojinha_prod
# DB_USER=lojinha_user
# DB_PASSWORD=SUA_SENHA_SUPER_SEGURA_AQUI

# ===========================================
# JWT & AUTENTICAÇÃO
# ===========================================
# ⚠️ CRÍTICO: Use uma chave JWT forte (mínimo 256 bits)
# Gere com: openssl rand -base64 64
JWT_SECRET=SUA_CHAVE_JWT_SUPER_SEGURA_AQUI_MINIMO_256_BITS

# Tempo de expiração do token (em segundos)
JWT_EXPIRES_IN=86400

# ===========================================
# SERVIDOR
# ===========================================
PORT=3000
NODE_ENV=development

# Para produção:
# NODE_ENV=production
# PORT=443

# ===========================================
# CORS & SEGURANÇA
# ===========================================
# URLs permitidas para CORS (separadas por vírgula)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Para produção, use apenas seu domínio:
# CORS_ORIGINS=https://seudominio.com,https://www.seudominio.com

# ===========================================
# RATE LIMITING
# ===========================================
# Máximo de requisições por IP por minuto
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# ===========================================
# BACKUP & MONITORAMENTO
# ===========================================
# Chave para webhooks de backup
BACKUP_WEBHOOK_SECRET=SUA_CHAVE_WEBHOOK_SEGURA

# URL para notificações de erro (Sentry, etc.)
ERROR_REPORTING_URL=

# ===========================================
# EMAIL (para notificações)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=SUA_SENHA_APP_EMAIL

# ===========================================
# PAGAMENTOS (quando implementar)
# ===========================================
# PAYMENT_GATEWAY_API_KEY=SUA_CHAVE_API_PAGAMENTO
# PAYMENT_GATEWAY_SECRET=SUA_SECRET_PAGAMENTO
# PAYMENT_WEBHOOK_SECRET=SUA_CHAVE_WEBHOOK_PAGAMENTO

# ===========================================
# LOGS & AUDITORIA
# ===========================================
# Nível de log (error, warn, info, debug)
LOG_LEVEL=info

# Diretório para logs
LOG_DIR=./logs

# ===========================================
# SEED DATA (apenas desenvolvimento)
# ===========================================
# ⚠️ NUNCA usar em produção!
RUN_SEED=false
